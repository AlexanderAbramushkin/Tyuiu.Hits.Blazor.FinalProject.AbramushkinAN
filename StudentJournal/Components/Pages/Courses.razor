@page "/courses"
@inject ICourseService CourseService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@using StudentJournal.Data.Models
@using StudentJournal.Data.Services
@rendermode InteractiveServer

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">Курсы</h2>
            <p class="text-muted">Управление учебными курсами</p>
        </div>
        <button class="btn btn-primary d-flex align-items-center gap-2" @onclick="GoToCoursesAdd">
            <i class="bi bi-plus-circle"></i> Добавить курс
        </button>
    </div>

    @if (courseList.Count == 0)
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="bi bi-book text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">Нет курсов</h4>
                <p class="text-muted">Добавьте первый курс, чтобы начать</p>
                <button class="btn btn-primary mt-2" @onclick="GoToCoursesAdd">
                    <i class="bi bi-plus"></i> Добавить курс
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var course in courseList)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title fw-bold text-truncate">@course.Name</h5>
                                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3">
                                    ID: @course.Id
                                </span>
                            </div>
                            <p class="card-text text-muted">@course.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 pt-0">
                            <div class="d-flex justify-content-end gap-2">
                                <button class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1"
                                        @onclick="@(() => NavigationManager.NavigateTo($"/courses/edit/{course.Id}"))">
                                    <i class="bi bi-pencil"></i> Редактировать
                                </button>
                                <button class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1"
                                        @onclick="@(() => DeleteCourse(course.Id))">
                                    <i class="bi bi-trash"></i> Удалить
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Course> courseList = new();

    protected override async Task OnInitializedAsync()
    {
        courseList = (await CourseService.GetCoursesAsync()).ToList();
    }

    private async Task DeleteCourse(int id)
    {
        bool confirmed = await ShowConfirmDialog("Удаление курса", "Вы уверены, что хотите удалить этот курс?");
        if (confirmed)
        {
            await CourseService.DeleteCourseAsync(id);
            courseList = (await CourseService.GetCoursesAsync()).ToList();
        }
    }

    private void GoToCoursesAdd()
    {
        NavigationManager.NavigateTo("/courses/add");
    }

    private async Task<bool> ShowConfirmDialog(string title, string message)
    {
        return await JSRuntime.InvokeAsync<bool>("confirm", message);
    }
}

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 12px;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.1) !important;
        }

    .empty-state {
        max-width: 400px;
        margin: 0 auto;
    }
</style>