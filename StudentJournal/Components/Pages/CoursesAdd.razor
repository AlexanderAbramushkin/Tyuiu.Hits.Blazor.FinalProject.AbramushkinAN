@page "/courses/add"
@using StudentJournal.Data.Models
@inject ICourseService CourseService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container-fluid px-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">Добавить учебную дисциплину</h2>
                <p class="page-subtitle">Создание новой учебной дисциплины</p>
            </div>
            <button class="btn btn-outline-secondary btn-with-icon"
                    @onclick="@(() => NavigationManager.NavigateTo("/courses"))">
                <i class="bi bi-arrow-left"></i> Назад
            </button>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card">
                <div class="form-header">
                    <h5 class="form-title">Основная информация</h5>
                </div>
                <div class="form-body">
                    <div class="form-group">
                        <label class="form-label">
                            <span>Название дисциплины</span>
                            <span class="text-danger">*</span>
                        </label>
                        <input class="form-input"
                               @bind="NewCourse.Name"
                               placeholder="Введите название учебной дисциплины"
                               required />
                        <div class="form-hint">Название должно быть понятным и отражать содержание учебной дисциплины</div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Описание</label>
                        <textarea class="form-input textarea"
                                  @bind="NewCourse.Description"
                                  rows="4"
                                  placeholder="Опишите содержание учебной дисциплины, цели и задачи"></textarea>
                        <div class="form-hint">Подробное описание поможет студентам понять содержание учебной дисциплины</div>
                    </div>

                    <div class="form-footer">
                        <div class="d-flex justify-content-end gap-3">
                            <button type="button"
                                    class="btn btn-outline-secondary btn-action"
                                    @onclick="@(() => NavigationManager.NavigateTo("/courses"))">
                                Отмена
                            </button>
                            <button type="button"
                                    class="btn btn-primary btn-action"
                                    @onclick="@SaveCourse"
                                    disabled="@(string.IsNullOrWhiteSpace(NewCourse.Name))">
                                <i class="bi bi-check-circle me-2"></i> Сохранить
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Course NewCourse = new();

    private async Task SaveCourse()
    {
        if (string.IsNullOrWhiteSpace(NewCourse.Name))
            return;

        await CourseService.AddCourseAsync(NewCourse);
        NavigationManager.NavigateTo("/courses");
    }
}

