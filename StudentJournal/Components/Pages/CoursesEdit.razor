@page "/courses/edit/{Id:int}"
@using StudentJournal.Data.Models
@inject ICourseService CourseService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container-fluid px-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">Редактировать учебную дисциплину</h2>
                <p class="page-subtitle">Изменение информации о учебной дисциплине</p>
            </div>
            <button class="btn btn-outline-secondary btn-with-icon"
                    @onclick="@CancelEdit">
                <i class="bi bi-arrow-left"></i> Назад
            </button>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (originalCourse == null)
            {
                <div class="loading-state">
                    <div class="spinner"></div>
                    <p>Загрузка данных...</p>
                </div>
            }
            else
            {
                <div class="form-card">
                    <div class="form-header">
                        <h5 class="form-title">Редактирование учебной дисциплины "@originalCourse.Name"</h5>
                    </div>
                    <div class="form-body">
                        @if (errorMessage != null)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-circle me-2"></i> @errorMessage
                            </div>
                        }

                        <div class="form-group">
                            <label class="form-label">
                                <span>Название учебной дисциплины</span>
                                <span class="text-danger">*</span>
                            </label>
                            <input class="form-input @(string.IsNullOrWhiteSpace(nameValue) ? "is-invalid" : "")"
                                   @bind="nameValue"
                                   @bind:event="oninput"
                                   placeholder="Введите название учебной дисциплины"
                                   required />
                            @if (!string.IsNullOrWhiteSpace(nameValue))
                            {
                                <div class="form-info mt-1">
                                    @if (checkingDuplicate)
                                    {
                                        <span class="text-muted">
                                            <i class="bi bi-hourglass-split me-1"></i> Проверка...
                                        </span>
                                    }
                                    else
                                    {
                                        @duplicateCheckMessage
                                    }
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            <label class="form-label">Описание</label>
                            <textarea class="form-input textarea"
                                      @bind="descriptionValue"
                                      rows="4"
                                      placeholder="Опишите содержание учебной дисциплины"></textarea>
                        </div>

                        <div class="form-footer">
                            <div class="d-flex justify-content-end gap-3">
                                <button type="button"
                                        class="btn btn-outline-secondary btn-action"
                                        @onclick="@CancelEdit">
                                    Отмена
                                </button>
                                <button type="button"
                                        class="btn btn-primary btn-action"
                                        @onclick="@SaveCourse"
                                        disabled="@(string.IsNullOrWhiteSpace(nameValue) || nameInvalid || checkingDuplicate)">
                                    <i class="bi bi-check-circle me-2"></i> Сохранить изменения
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Course? originalCourse;
    private string nameValue = "";
    private string descriptionValue = "";
    private string? errorMessage;
    private bool nameInvalid = false;
    private bool checkingDuplicate = false;
    private string duplicateCheckMessage = "";

    protected override async Task OnInitializedAsync()
    {
        originalCourse = await CourseService.GetCourseByIdAsync(Id);
        if (originalCourse != null)
        {
            nameValue = originalCourse.Name;
            descriptionValue = originalCourse.Description ?? "";
        }
    }

    private async Task OnNameInput()
    {
        // Сбрасываем ошибки при вводе
        errorMessage = null;

        if (!string.IsNullOrWhiteSpace(nameValue))
        {
            await CheckForDuplicate();
        }
        else
        {
            duplicateCheckMessage = "";
            nameInvalid = false;
        }

        StateHasChanged();
    }

    private async Task CheckForDuplicate()
    {
        if (string.IsNullOrWhiteSpace(nameValue) || checkingDuplicate)
        {
            return;
        }

        checkingDuplicate = true;

        try
        {
            // Проверяем, не изменилось ли имя
            if (nameValue?.Trim() == originalCourse?.Name?.Trim())
            {
                nameInvalid = false;
                duplicateCheckMessage = "<span class='text-success'><i class='bi bi-check-circle me-1'></i> Название не изменилось</span>";
                return;
            }

            var exists = await CourseService.CourseNameExistsAsync(nameValue, Id);

            if (exists)
            {
                nameInvalid = true;
                duplicateCheckMessage = $"<span class='text-danger'><i class='bi bi-x-circle me-1'></i> Учебная дисциплина с названием '{nameValue}' уже существует!</span>";
            }
            else
            {
                nameInvalid = false;
                duplicateCheckMessage = "<span class='text-success'><i class='bi bi-check-circle me-1'></i> Название доступно</span>";
            }
        }
        finally
        {
            checkingDuplicate = false;
            StateHasChanged();
        }
    }

    private async Task SaveCourse()
    {
        if (string.IsNullOrWhiteSpace(nameValue))
        {
            errorMessage = "Введите название дисциплины";
            StateHasChanged();
            return;
        }

        if (nameInvalid)
        {
            errorMessage = "Исправьте ошибки в форме";
            StateHasChanged();
            return;
        }

        try
        {
            // Финальная проверка перед сохранением
            var exists = await CourseService.CourseNameExistsAsync(nameValue, Id);
            if (exists)
            {
                errorMessage = "Учебная дисциплина с таким названием уже существует!";
                StateHasChanged();
                return;
            }

            // Создаем новый объект с обновленными данными
            var updatedCourse = new Course
                {
                    Id = Id,
                    Name = nameValue,
                    Description = descriptionValue
                };

            await CourseService.UpdateCourseAsync(updatedCourse);
            NavigationManager.NavigateTo("/courses");
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка: {ex.Message}";
            StateHasChanged();
        }
    }

    private void CancelEdit()
    {
        // Просто возвращаемся назад без сохранения
        NavigationManager.NavigateTo("/courses");
    }
}

