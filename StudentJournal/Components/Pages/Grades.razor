@page "/grades"
@inject IGradeService GradeService
@inject IStudentService StudentService
@inject ICourseService CourseService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@using StudentJournal.Data.Models

<div class="container-fluid px-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">Журнал оценок</h2>
                <p class="page-subtitle">Управление оценками студентов</p>
            </div>
            <button class="btn btn-primary btn-with-icon"
                    @onclick="@(() => NavigationManager.NavigateTo("/grades/add"))">
                <i class="bi bi-plus-circle"></i> Добавить оценку
            </button>
        </div>
    </div>

    <div class="card filters-card mb-4">
        <div class="card-body">
            <h5 class="filters-title">Фильтры</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Студент</label>
                    <select class="form-select" @bind="SelectedStudentId" @bind:event="onchange">
                        <option value="">Все студенты</option>
                        @foreach (var student in studentList)
                        {
                            <option value="@student.Id">@student.Name (@student.Group)</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Курс</label>
                    <select class="form-select" @bind="SelectedCourseId" @bind:event="onchange">
                        <option value="">Все курсы</option>
                        @foreach (var course in courseList)
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    </select>
                </div>
            </div>
            @if (SelectedStudentId.HasValue || SelectedCourseId.HasValue)
            {
                <div class="mt-3">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="ClearFilters">
                        <i class="bi bi-x-circle"></i> Сбросить фильтры
                    </button>
                </div>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Загрузка данных...</p>
        </div>
    }
    else if (gradeList.Count == 0)
    {
        <div class="empty-state">
            <i class="bi bi-clipboard-data empty-icon"></i>
            <h4 class="empty-title">Нет оценок</h4>
            <p class="empty-text">Добавьте первую оценку, чтобы начать</p>
            <button class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/grades/add"))">
                <i class="bi bi-plus"></i> Добавить оценку
            </button>
        </div>
    }
    else
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Студент</th>
                            <th>Группа</th>
                            <th>Курс</th>
                            <th class="text-center">Оценка</th>
                            <th class="text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grade in gradeList)
                        {
                            var student = studentList.FirstOrDefault(s => s.Id == grade.StudentId);
                            var course = courseList.FirstOrDefault(c => c.Id == grade.CourseId);

                            <tr>
                                <td>
                                    <div class="student-info">
                                        <div class="student-details">
                                            <div class="student-name">
                                                @if (student != null)
                                                {
                                                    @student.Name
                                                }
                                                else
                                                {
                                                    <span class="text-danger">[Студент не найден]</span>
                                                }
                                            </div>
                                            <div class="student-institute">@student?.Institute</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (student != null)
                                    {
                                        <span class="group-badge">@student.Group</span>
                                    }
                                </td>
                                <td>
                                    @if (course != null)
                                    {
                                        <span class="course-badge">@course.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">[Курс не найден]</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="grade-badge @GetGradeClass(grade.Score)">
                                        @grade.Score
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <button class="btn btn-sm btn-outline-primary btn-action"
                                                @onclick="@(() => NavigationManager.NavigateTo($"/grades/edit/{grade.Id}"))"
                                                title="Редактировать">
                                            <i class="bi bi-pencil me-1"></i> Редактировать
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger btn-action"
                                                @onclick="@(() => ShowDeleteConfirm(grade.Id, student?.Name ?? "Неизвестный студент", course?.Name ?? "Неизвестный курс"))"
                                                title="Удалить">
                                            <i class="bi bi-trash me-1"></i> Удалить
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="table-footer">
                <div class="table-summary">
                    Показано <strong>@gradeList.Count</strong> записей
                </div>
            </div>
        </div>
    }
</div>

<ConfirmDialog @ref="deleteDialog"
               Title="Удаление оценки"
               Icon="bi-trash"
               Message="@($"Вы уверены, что хотите удалить оценку '{gradeToDeleteScore}' студента {gradeToDeleteStudent} по курсу {gradeToDeleteCourse}?")"
               OnClose="OnDeleteDialogClosed" />

@code {
    private List<Student> studentList = new();
    private List<Course> courseList = new();
    private List<Grade> gradeList = new();
    private int? SelectedStudentId;
    private int? SelectedCourseId;
    private bool isLoading = true;
    private ConfirmDialog? deleteDialog;
    private int gradeToDeleteId;
    private string gradeToDeleteStudent = string.Empty;
    private string gradeToDeleteCourse = string.Empty;
    private int gradeToDeleteScore;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            studentList = (await StudentService.GetStudentsAsync()).ToList();
            courseList = (await CourseService.GetCoursesAsync()).ToList();

            var grades = await GradeService.GetGradesAsync();

            if (SelectedStudentId.HasValue)
                grades = grades.Where(g => g.StudentId == SelectedStudentId.Value);

            if (SelectedCourseId.HasValue)
                grades = grades.Where(g => g.CourseId == SelectedCourseId.Value);

            gradeList = grades.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки данных: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task DeleteGrade(int id)
    {
        try
        {
            await GradeService.DeleteGradeAsync(id);
            await LoadData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при удалении: {ex.Message}");
        }
    }

    private async Task ClearFilters()
    {
        SelectedStudentId = null;
        SelectedCourseId = null;
        await LoadData();
    }

    private string GetGradeClass(int score)
    {
        if (score >= 91) return "grade-excellent";
        if (score >= 76) return "grade-good";
        if (score >= 61) return "grade-average";
        return "grade-poor";
    }

    private void ShowDeleteConfirm(int id, string studentName, string courseName)
    {
        var grade = gradeList.FirstOrDefault(g => g.Id == id);
        if (grade != null)
        {
            gradeToDeleteId = id;
            gradeToDeleteStudent = studentName;
            gradeToDeleteCourse = courseName;
            gradeToDeleteScore = grade.Score;
            deleteDialog?.Show();
        }
    }

    private async Task OnDeleteDialogClosed(bool confirmed)
    {
        if (confirmed)
        {
            await DeleteGrade(gradeToDeleteId);
        }
    }
}

