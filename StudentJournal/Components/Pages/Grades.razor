@page "/grades"
@inject IGradeService GradeService
@inject IStudentService StudentService
@inject ICourseService CourseService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@using StudentJournal.Data.Models

<div class="container-fluid px-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">Журнал оценок</h2>
                <p class="page-subtitle">Управление оценками студентов</p>
            </div>
            <button class="btn btn-primary btn-with-icon"
                    @onclick="@(() => NavigationManager.NavigateTo("/grades/add"))">
                <i class="bi bi-plus-circle"></i> Добавить оценку
            </button>
        </div>
    </div>

    <div class="card filters-card mb-4">
        <div class="card-body">
            <h5 class="filters-title">Фильтры</h5>
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Студент</label>
                    <select class="form-select" value="@SelectedStudentId" @onchange="@OnStudentFilterChanged">
                        <option value="">Все студенты</option>
                        @foreach (var student in studentList)
                        {
                            <option value="@student.Id">@student.Name (@student.Group)</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Группа</label>
                    <select class="form-select" value="@SelectedGroupFilter" @onchange="@OnGroupFilterChanged">
                        <option value="">Все группы</option>
                        @foreach (var group in groupedStudents.Keys.OrderBy(g => g))
                        {
                            <option value="@group">@group</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Курс</label>
                    <select class="form-select" value="@SelectedCourseFilter" @onchange="@OnCourseFilterChanged">
                        <option value="">Все курсы</option>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <option value="@i">@i курс</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Предмет</label>
                    <select class="form-select" value="@SelectedCourseId" @onchange="@OnSubjectFilterChanged">
                        <option value="">Все предметы</option>
                        @foreach (var course in courseList)
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    </select>
                </div>
            </div>
            @if (SelectedStudentId.HasValue || !string.IsNullOrEmpty(SelectedGroupFilter) || SelectedCourseId.HasValue || SelectedCourseFilter.HasValue)
            {
                <div class="mt-3">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="@ClearFilters">
                        <i class="bi bi-x-circle"></i> Сбросить фильтры
                    </button>
                </div>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Загрузка данных...</p>
        </div>
    }
    else if (gradeList.Count == 0)
    {
        <div class="empty-state">
            <i class="bi bi-clipboard-data empty-icon"></i>
            <h4 class="empty-title">Нет оценок</h4>
            <p class="empty-text">Добавьте первую оценку, чтобы начать</p>
            <button class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/grades/add"))">
                <i class="bi bi-plus"></i> Добавить оценку
            </button>
        </div>
    }
    else
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Студент</th>
                            <th>Группа</th>
                            <th>Курс</th>
                            <th>Предмет</th>
                            <th class="text-center">Оценка</th>
                            <th class="text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grade in gradeList)
                        {
                            var student = studentList.FirstOrDefault(s => s.Id == grade.StudentId);
                            var course = courseList.FirstOrDefault(c => c.Id == grade.CourseId);

                            <tr>
                                <td>
                                    <div class="student-info">
                                        <div class="student-avatar">
                                            <div class="avatar-initial">@(student?.Name?[0] ?? '?')</div>
                                        </div>
                                        <div class="student-details">
                                            <div class="student-name">
                                                @if (student != null)
                                                {
                                                    @student.Name
                                                }
                                                else
                                                {
                                                    <span class="text-danger">[Студент не найден]</span>
                                                }
                                            </div>
                                            <div class="student-institute">@student?.Institute</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (student != null)
                                    {
                                        <span class="group-badge">
                                            <i class="bi bi-people-fill me-1"></i> @student.Group
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (student != null)
                                    {
                                        <span class="course-indicator">
                                            <i class="bi bi-mortarboard me-1"></i>
                                            <span class="course-number">@student.Course</span>
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (course != null)
                                    {
                                        <span class="subject-badge">
                                            <i class="bi bi-journal-text me-1"></i> @course.Name
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">[Предмет не найден]</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="grade-badge @GetGradeClass(grade.Score)">
                                        @grade.Score
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <button class="btn btn-sm btn-outline-primary btn-action me-2"
                                                @onclick="@(() => NavigationManager.NavigateTo($"/grades/edit/{grade.Id}"))"
                                                title="Редактировать">
                                            <i class="bi bi-pencil"></i> Редактировать
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger btn-action"
                                                @onclick="@(() => ShowDeleteConfirm(grade.Id, student?.Name ?? "Неизвестный студент", course?.Name ?? "Неизвестный предмет"))"
                                                title="Удалить">
                                            <i class="bi bi-trash"></i> Удалить
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="table-footer">
                <div class="table-summary">
                    Показано <strong>@gradeList.Count</strong> записей
                    @if (!string.IsNullOrEmpty(SelectedGroupFilter))
                    {
                        <span class="ms-2">(группа @SelectedGroupFilter)</span>
                    }
                    @if (SelectedCourseFilter.HasValue)
                    {
                        <span class="ms-2">(курс @SelectedCourseFilter)</span>
                    }
                </div>
                <div class="table-stats">
                    @{
                        var average = gradeList.Any() ? gradeList.Average(g => g.Score) : 0;
                        var max = gradeList.Any() ? gradeList.Max(g => g.Score) : 0;
                        var min = gradeList.Any() ? gradeList.Min(g => g.Score) : 0;
                    }
                    <span class="stat-item">
                        <i class="bi bi-graph-up"></i> Средняя: <strong>@average.ToString("F1")</strong>
                    </span>
                    <span class="stat-item">
                        <i class="bi bi-arrow-up"></i> Макс: <strong>@max</strong>
                    </span>
                    <span class="stat-item">
                        <i class="bi bi-arrow-down"></i> Мин: <strong>@min</strong>
                    </span>
                </div>
            </div>
        </div>
    }
</div>

<ConfirmDialog @ref="deleteDialog"
               Title="Удаление оценки"
               Icon="bi-trash"
               Message="@deleteConfirmMessage"
               OnClose="@OnDeleteDialogClosed" />

@code {
    private List<Student> studentList = new();
    private List<Course> courseList = new();
    private List<Grade> gradeList = new();
    private int? SelectedStudentId;
    private string? SelectedGroupFilter;
    private int? SelectedCourseFilter;
    private int? SelectedCourseId;
    private bool isLoading = true;
    private ConfirmDialog? deleteDialog;
    private int gradeToDeleteId;
    private string gradeToDeleteStudent = string.Empty;
    private string gradeToDeleteCourse = string.Empty;
    private int gradeToDeleteScore;
    private string deleteConfirmMessage = string.Empty;
    private List<Grade> allGrades = new();
    private Dictionary<string, List<Student>> groupedStudents = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadBaseData();
    }

    private async Task LoadBaseData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            studentList = (await StudentService.GetStudentsAsync()).ToList();
            courseList = (await CourseService.GetCoursesAsync()).ToList();
            allGrades = (await GradeService.GetGradesAsync()).ToList();
            
            groupedStudents = studentList.GroupBy(s => s.Group)
                                       .ToDictionary(g => g.Key, g => g.ToList());

            ApplyFilters();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки данных: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ApplyFilters()
    {
        var filteredGrades = allGrades.AsQueryable();

        if (SelectedStudentId.HasValue && SelectedStudentId.Value > 0)
            filteredGrades = filteredGrades.Where(g => g.StudentId == SelectedStudentId.Value);

        if (!string.IsNullOrEmpty(SelectedGroupFilter))
        {
            var studentIdsByGroup = studentList
                .Where(s => s.Group == SelectedGroupFilter)
                .Select(s => s.Id)
                .ToList();
            filteredGrades = filteredGrades.Where(g => studentIdsByGroup.Contains(g.StudentId));
        }

        if (SelectedCourseId.HasValue && SelectedCourseId.Value > 0)
            filteredGrades = filteredGrades.Where(g => g.CourseId == SelectedCourseId.Value);

        if (SelectedCourseFilter.HasValue && SelectedCourseFilter.Value > 0)
        {
            var studentIdsByCourse = studentList
                .Where(s => s.Course == SelectedCourseFilter.Value)
                .Select(s => s.Id)
                .ToList();
            filteredGrades = filteredGrades.Where(g => studentIdsByCourse.Contains(g.StudentId));
        }

        gradeList = filteredGrades.ToList();
        StateHasChanged();
    }

    private async Task DeleteGrade(int id)
    {
        try
        {
            await GradeService.DeleteGradeAsync(id);
            await LoadBaseData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при удалении: {ex.Message}");
        }
    }

    private void ClearFilters()
    {
        SelectedStudentId = null;
        SelectedGroupFilter = null;
        SelectedCourseId = null;
        SelectedCourseFilter = null;
        ApplyFilters();
    }

    private string GetGradeClass(int score)
    {
        if (score >= 91) return "grade-excellent";
        if (score >= 76) return "grade-good";
        if (score >= 61) return "grade-average";
        return "grade-poor";
    }

    private void ShowDeleteConfirm(int id, string studentName, string courseName)
    {
        var grade = gradeList.FirstOrDefault(g => g.Id == id);
        if (grade != null)
        {
            gradeToDeleteId = id;
            gradeToDeleteStudent = studentName;
            gradeToDeleteCourse = courseName;
            gradeToDeleteScore = grade.Score;
            deleteConfirmMessage = $"Вы уверены, что хотите удалить оценку '{gradeToDeleteScore}' студента {gradeToDeleteStudent} по предмету {gradeToDeleteCourse}?";
            deleteDialog?.Show();
        }
    }

    private async Task OnDeleteDialogClosed(bool confirmed)
    {
        if (confirmed)
        {
            await DeleteGrade(gradeToDeleteId);
        }
    }

    private void OnStudentFilterChanged(ChangeEventArgs e)
    {
        SelectedStudentId = string.IsNullOrEmpty(e.Value?.ToString()) ? null : int.Parse(e.Value.ToString());
        ApplyFilters();
    }

    private void OnGroupFilterChanged(ChangeEventArgs e)
    {
        SelectedGroupFilter = string.IsNullOrEmpty(e.Value?.ToString()) ? null : e.Value.ToString();
        ApplyFilters();
    }

    private void OnCourseFilterChanged(ChangeEventArgs e)
    {
        SelectedCourseFilter = string.IsNullOrEmpty(e.Value?.ToString()) ? null : int.Parse(e.Value.ToString());
        ApplyFilters();
    }

    private void OnSubjectFilterChanged(ChangeEventArgs e)
    {
        SelectedCourseId = string.IsNullOrEmpty(e.Value?.ToString()) ? null : int.Parse(e.Value.ToString());
        ApplyFilters();
    }
}

