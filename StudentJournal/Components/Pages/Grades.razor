@page "/grades"
@inject IGradeService GradeService
@inject IStudentService StudentService
@inject ICourseService CourseService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer
@using StudentJournal.Data.Models
@using StudentJournal.Data.Services

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">Журнал оценок</h2>
            <p class="text-muted">Управление оценками студентов</p>
        </div>
        <button class="btn btn-primary d-flex align-items-center gap-2"
                @onclick="@(() => NavigationManager.NavigateTo("/grades/add"))">
            <i class="bi bi-plus-circle"></i> Добавить оценку
        </button>
    </div>

    <!-- Отладочная информация -->
    @if (debugInfo)
    {
        <div class="alert alert-info mb-3">
            <strong>Отладка:</strong>
            Студентов: @studentList.Count,
            Курсов: @courseList.Count,
            Оценок: @gradeList.Count
            @if (gradeList.Count > 0)
            {
                <br />
                <small>Первая оценка: StudentId=@gradeList[0].StudentId, CourseId=@gradeList[0].CourseId</small>
            }
        </div>
    }

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <h5 class="fw-semibold mb-3">Фильтры</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Студент</label>
                    <select class="form-select" @bind="SelectedStudentId" @bind:event="onchange">
                        <option value="">Все студенты</option>
                        @foreach (var student in studentList)
                        {
                            <option value="@student.Id">@student.Name (@student.Group)</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Курс</label>
                    <select class="form-select" @bind="SelectedCourseId" @bind:event="onchange">
                        <option value="">Все курсы</option>
                        @foreach (var course in courseList)
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    </select>
                </div>
            </div>
            @if (SelectedStudentId.HasValue || SelectedCourseId.HasValue)
            {
                <div class="mt-3">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="ClearFilters">
                        <i class="bi bi-x-circle"></i> Сбросить фильтры
                    </button>
                </div>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-2 text-muted">Загрузка данных...</p>
        </div>
    }
    else if (gradeList.Count == 0)
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="bi bi-clipboard-data text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">Нет оценок</h4>
                <p class="text-muted">Добавьте первую оценку, чтобы начать</p>
                <button class="btn btn-primary mt-2" @onclick="@(() => NavigationManager.NavigateTo("/grades/add"))">
                    <i class="bi bi-plus"></i> Добавить оценку
                </button>
                <div class="mt-3">
                    <button class="btn btn-sm btn-outline-info" @onclick="LoadData">
                        <i class="bi bi-arrow-clockwise"></i> Обновить данные
                    </button>
                    <button class="btn btn-sm btn-outline-warning ms-2" @onclick="ToggleDebug">
                        <i class="bi bi-bug"></i> Отладка
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">Студент</th>
                                <th class="border-0">Группа</th>
                                <th class="border-0">Курс</th>
                                <th class="border-0 text-center">Оценка</th>
                                <th class="border-0 text-end">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var grade in gradeList)
                            {
                                var student = studentList.FirstOrDefault(s => s.Id == grade.StudentId);
                                var course = courseList.FirstOrDefault(c => c.Id == grade.CourseId);

                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">
                                                    @if (student != null)
                                                    {
                                                        @student.Name
                                                    }
                                                    else
                                                    {
                                                        <span class="text-danger">[Студент не найден: @grade.StudentId]</span>
                                                    }
                                                </div>
                                                <small class="text-muted">@student?.Institute</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (student != null)
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary">@student.Group</span>
                                        }
                                    </td>
                                    <td>
                                        @if (course != null)
                                        {
                                            <span class="badge bg-primary bg-opacity-10 text-primary">@course.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">[Курс не найден: @grade.CourseId]</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="grade-badge @GetGradeClass(grade.Score)">
                                            @grade.Score
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-outline-primary"
                                                    @onclick="@(() => NavigationManager.NavigateTo($"/grades/edit/{grade.Id}"))"
                                                    title="Редактировать">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="@(() => DeleteGrade(grade.Id))"
                                                    title="Удалить">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-transparent border-top">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        Показано <strong>@gradeList.Count</strong> записей
                    </div>
                    <div>
                        <button class="btn btn-sm btn-outline-info" @onclick="LoadData">
                            <i class="bi bi-arrow-clockwise"></i> Обновить
                        </button>
                        <button class="btn btn-sm btn-outline-warning ms-2" @onclick="ToggleDebug">
                            <i class="bi bi-bug"></i> Отладка
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Student> studentList = new();
    private List<Course> courseList = new();
    private List<Grade> gradeList = new();
    private int? SelectedStudentId;
    private int? SelectedCourseId;
    private bool isLoading = true;
    private bool debugInfo = false;
    private bool isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataInternal(false);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isInitialized = true;
            // Повторная загрузка не требуется, так как уже загружено в OnInitializedAsync
        }
    }

    private async Task LoadData()
    {
        await LoadDataInternal(true);
    }

    private async Task LoadDataInternal(bool useJs)
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Загружаем данные последовательно, а не параллельно
            studentList = (await StudentService.GetStudentsAsync()).ToList();
            courseList = (await CourseService.GetCoursesAsync()).ToList();

            var grades = await GradeService.GetGradesAsync();

            if (SelectedStudentId.HasValue)
                grades = grades.Where(g => g.StudentId == SelectedStudentId.Value);

            if (SelectedCourseId.HasValue)
                grades = grades.Where(g => g.CourseId == SelectedCourseId.Value);

            gradeList = grades.ToList();

            // Отладочная информация
            Console.WriteLine($"Загружено: {studentList.Count} студентов, {courseList.Count} курсов, {gradeList.Count} оценок");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки данных: {ex.Message}");

            // Только после инициализации можно вызывать JS
            if (useJs && isInitialized)
            {
                try
                {
                    await JSRuntime.InvokeVoidAsync("alert", $"Ошибка загрузки данных: {ex.Message}");
                }
                catch
                {
                    // Игнорируем ошибки JS
                }
            }
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task DeleteGrade(int id)
    {
        try
        {
            bool confirmed = await ShowConfirmDialog("Удаление оценки", "Вы уверены, что хотите удалить эту оценку?");
            if (confirmed)
            {
                await GradeService.DeleteGradeAsync(id);
                await LoadData();
            }
        }
        catch (Exception ex)
        {
            if (isInitialized)
            {
                try
                {
                    await JSRuntime.InvokeVoidAsync("alert", $"Ошибка при удалении: {ex.Message}");
                }
                catch
                {
                    // Игнорируем ошибки JS
                }
            }
        }
    }

    private async Task ClearFilters()
    {
        SelectedStudentId = null;
        SelectedCourseId = null;
        await LoadData();
    }

    private void ToggleDebug()
    {
        debugInfo = !debugInfo;
        StateHasChanged();
    }

    private string GetGradeClass(int score)
    {
        if (score >= 85) return "grade-excellent";
        if (score >= 70) return "grade-good";
        if (score >= 60) return "grade-average";
        return "grade-poor";
    }

    private async Task<bool> ShowConfirmDialog(string title, string message)
    {
        if (!isInitialized)
            return true;

        try
        {
            return await JSRuntime.InvokeAsync<bool>("confirm", message);
        }
        catch
        {
            return true;
        }
    }
}

<style>
    .avatar-sm {
        width: 36px;
        height: 36px;
        font-size: 1rem;
    }

    .grade-badge {
        display: inline-block;
        width: 48px;
        height: 48px;
        line-height: 48px;
        border-radius: 50%;
        font-weight: bold;
        font-size: 1.1rem;
    }

