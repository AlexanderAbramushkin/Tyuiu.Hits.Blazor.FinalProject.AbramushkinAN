@page "/grades/edit/{Id:int}"
@using StudentJournal.Data.Models
@inject IGradeService GradeService
@inject IStudentService StudentService
@inject ICourseService CourseService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container-fluid px-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">Редактировать оценку</h2>
                <p class="page-subtitle">Изменение информации об оценке</p>
            </div>
            <button class="btn btn-outline-secondary btn-with-icon"
                    @onclick="@(() => NavigationManager.NavigateTo("/grades"))">
                <i class="bi bi-arrow-left"></i> Назад
            </button>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (editingGrade == null)
            {
                <div class="loading-state">
                    <div class="spinner"></div>
                    <p>Загрузка данных...</p>
                </div>
            }
            else
            {
                <div class="form-card">
                    <div class="form-header">
                        <h5 class="form-title">Редактирование оценки #@editingGrade.Id</h5>
                    </div>
                    <div class="form-body">
                        @if (errorMessage != null)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-circle me-2"></i> @errorMessage
                            </div>
                        }

                        <div class="form-group">
                            <label class="form-label">
                                <span>Студент</span>
                                <span class="text-danger">*</span>
                            </label>
                            <select class="form-input @(HasError("StudentId") ? "is-invalid" : "")"
                                    @bind="editingGrade.StudentId"
                                    required>
                                <option value="">Выберите студента</option>
                                @foreach (var student in studentList)
                                {
                                    <option value="@student.Id">@student.Name (@student.Group)</option>
                                }
                            </select>
                            @if (HasError("StudentId"))
                            {
                                <div class="invalid-feedback">@GetError("StudentId")</div>
                            }
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <span>Курс</span>
                                <span class="text-danger">*</span>
                            </label>
                            <select class="form-input @(HasError("CourseId") ? "is-invalid" : "")"
                                    @bind="editingGrade.CourseId"
                                    required>
                                <option value="">Выберите учебную дисцплину</option>
                                @foreach (var course in courseList)
                                {
                                    <option value="@course.Id">@course.Name</option>
                                }
                            </select>
                            @if (HasError("CourseId"))
                            {
                                <div class="invalid-feedback">@GetError("CourseId")</div>
                            }
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <span>Оценка</span>
                                <span class="text-danger">*</span>
                            </label>
                            <div class="score-input-container">
                                <input type="number"
                                       class="form-input @(HasError("Score") ? "is-invalid" : "")"
                                       min="0"
                                       max="100"
                                       @bind="editingGrade.Score"
                                       @bind:event="oninput"
                                       placeholder="0-100"
                                       required />
                                <div class="score-hint">Введите оценку от 0 до 100</div>
                            </div>
                            @if (HasError("Score"))
                            {
                                <div class="invalid-feedback">@GetError("Score")</div>
                            }
                        </div>

                        <div class="form-footer">
                            <div class="d-flex justify-content-end gap-3">
                                <button type="button"
                                        class="btn btn-outline-secondary btn-action"
                                        @onclick="@(() => NavigationManager.NavigateTo("/grades"))">
                                    Отмена
                                </button>
                                <button type="button"
                                        class="btn btn-primary btn-action"
                                        @onclick="@SaveGrade">
                                    <i class="bi bi-check-circle me-2"></i> Сохранить изменения
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Grade? editingGrade;
    private List<Student> studentList = new();
    private List<Course> courseList = new();
    private string? errorMessage;
    private Dictionary<string, List<string>> validationErrors = new();

    protected override async Task OnInitializedAsync()
    {
        editingGrade = await GradeService.GetGradeByIdAsync(Id);
        studentList = (await StudentService.GetStudentsAsync()).ToList();
        courseList = (await CourseService.GetCoursesAsync()).ToList();
    }


    private bool ValidateForm()
    {
        if (editingGrade == null)
            return false;

        validationErrors.Clear();
        errorMessage = null;

        if (editingGrade.StudentId <= 0)
        {
            AddError("StudentId", "Выберите студента");
        }

        if (editingGrade.CourseId <= 0)
        {
            AddError("CourseId", "Выберите учебную дисциплину");
        }

        if (editingGrade.Score < 0 || editingGrade.Score > 100)
        {
            AddError("Score", "Оценка должна быть от 0 до 100 баллов");
        }

        return validationErrors.Count == 0;
    }

    private void AddError(string field, string message)
    {
        if (!validationErrors.ContainsKey(field))
        {
            validationErrors[field] = new List<string>();
        }
        validationErrors[field].Add(message);
    }

    private bool HasError(string field)
    {
        return validationErrors.ContainsKey(field);
    }

    private string GetError(string field)
    {
        return validationErrors.ContainsKey(field) ? validationErrors[field].FirstOrDefault() ?? "" : "";
    }

    private async Task SaveGrade()
    {
        if (editingGrade == null) return;

        if (!ValidateForm())
        {
            errorMessage = "Пожалуйста, исправьте ошибки в форме";
            StateHasChanged();
            return;
        }

        try
        {
            var exists = await GradeService.GradeExistsAsyncExcludingId(
                editingGrade.StudentId,
                editingGrade.CourseId,
                editingGrade.Id);

            if (exists)
            {
                errorMessage = "Оценка по этому предмету для студента уже существует!";
                StateHasChanged();
                return;
            }

            await GradeService.UpdateGradeAsync(editingGrade);
            NavigationManager.NavigateTo("/grades");
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка при сохранении: {ex.Message}";
            StateHasChanged();
        }
    }
}

