@page "/students"
@inject IStudentService StudentService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@using StudentJournal.Data.Models

<div class="container-fluid px-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">Студенты</h2>
                <p class="page-subtitle">Управление списком студентов</p>
            </div>
            <button class="btn btn-primary btn-with-icon"
                    @onclick="@(() => NavigationManager.NavigateTo("/students/add"))">
                <i class="bi bi-person-plus"></i> Добавить студента
            </button>
        </div>
    </div>

    @if (studentList.Count == 0)
    {
        <div class="empty-state">
            <i class="bi bi-people empty-icon"></i>
            <h4 class="empty-title">Нет студентов</h4>
            <p class="empty-text">Добавьте первого студента, чтобы начать</p>
            <button class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/students/add"))">
                <i class="bi bi-plus"></i> Добавить студента
            </button>
        </div>
    }
    else
    {
        <div class="card filters-card mb-4">
            <div class="card-body">
                <h5 class="filters-title">Фильтры</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Институт</label>
                        <select class="form-select" value="@selectedInstituteFilter" @onchange="@OnInstituteFilterChanged">
                            <option value="">Все институты</option>
                            @foreach (var institute in institutes)
                            {
                                <option value="@institute">@institute</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Группа</label>
                        <select class="form-select" value="@selectedGroupFilter" @onchange="@OnGroupFilterChanged">
                            <option value="">Все группы</option>
                            @foreach (var group in groups)
                            {
                                <option value="@group">@group</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Курс</label>
                        <select class="form-select" value="@selectedCourseFilter" @onchange="@OnCourseFilterChanged">
                            <option value="">Все курсы</option>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">@i курс</option>
                            }
                        </select>
                    </div>
                </div>
                @if (HasActiveFilters)
                {
                    <div class="mt-3">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="@ClearFilters">
                            <i class="bi bi-x-circle"></i> Сбросить фильтры
                        </button>
                    </div>
                }
            </div>
        </div>

        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Студент</th>
                            <th>Институт</th>
                            <th>Группа</th>
                            <th>Курс</th>
                            <th class="text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in filteredStudentList)
                        {
                            <tr>
                                <td>
                                    <div class="student-info">
                                        <div class="student-details">
                                            <div class="student-name">@student.Name</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="institute-badge">@student.Institute</span>
                                </td>
                                <td>
                                    <span class="group-badge">
                                        <i class="bi bi-people-fill me-1"></i> @student.Group
                                    </span>
                                </td>
                                <td>
                                    <span class="course-indicator">
                                        <i class="bi bi-book me-1"></i>
                                        <span class="course-number">@student.Course</span>
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <button class="btn btn-sm btn-outline-primary btn-action me-2"
                                                @onclick="@(() => NavigationManager.NavigateTo($"/students/edit/{student.Id}"))">
                                            <i class="bi bi-pencil"></i> Редактировать
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger btn-action"
                                                @onclick="@(() => ShowDeleteConfirm(student.Id, student.Name))">
                                            <i class="bi bi-trash"></i> Удалить
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="table-footer">
                <div class="table-summary">
                    Показано <strong>@filteredStudentList.Count</strong> из <strong>@studentList.Count</strong> студентов
                    @if (!string.IsNullOrEmpty(selectedGroupFilter))
                    {
                        <span class="ms-2">(группа @selectedGroupFilter)</span>
                    }
                    @if (!string.IsNullOrEmpty(selectedCourseFilter))
                    {
                        <span class="ms-2">(курс @selectedCourseFilter)</span>
                    }
                </div>
            </div>
        </div>
    }
</div>

<ConfirmDialog @ref="deleteDialog"
               Title="Удаление студента"
               Icon="bi-person-x"
               Message="@($"Вы уверены, что хотите удалить студента {studentToDeleteName}?")"
               OnClose="OnDeleteDialogClosed" />

@code {
    private List<Student> studentList = new();
    private List<Student> filteredStudentList = new();
    private List<string> institutes = new();
    private List<string> groups = new();

    private string? selectedInstituteFilter;
    private string? selectedGroupFilter;
    private string? selectedCourseFilter;

    private ConfirmDialog? deleteDialog;
    private int studentToDeleteId;
    private string studentToDeleteName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        try
        {
            studentList = (await StudentService.GetStudentsAsync()).ToList();
            institutes = studentList.Select(s => s.Institute).Distinct().OrderBy(i => i).ToList();
            groups = studentList.Select(s => s.Group).Distinct().OrderBy(g => g).ToList();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки студентов: {ex.Message}");
        }
    }

    private void ApplyFilters()
    {
        filteredStudentList = studentList.Where(s =>
            (string.IsNullOrEmpty(selectedInstituteFilter) || s.Institute == selectedInstituteFilter) &&
            (string.IsNullOrEmpty(selectedGroupFilter) || s.Group == selectedGroupFilter) &&
            (string.IsNullOrEmpty(selectedCourseFilter) || s.Course.ToString() == selectedCourseFilter)
        ).ToList();
    }

    private bool HasActiveFilters =>
        !string.IsNullOrEmpty(selectedInstituteFilter) ||
        !string.IsNullOrEmpty(selectedGroupFilter) ||
        !string.IsNullOrEmpty(selectedCourseFilter);

    private void ClearFilters()
    {
        selectedInstituteFilter = null;
        selectedGroupFilter = null;
        selectedCourseFilter = null;
        ApplyFilters();
    }

    private async Task DeleteStudent(int id)
    {
        try
        {
            await StudentService.DeleteStudentAsync(id);
            await LoadStudents();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при удалении: {ex.Message}");
        }
    }

    private void ShowDeleteConfirm(int id, string name)
    {
        studentToDeleteId = id;
        studentToDeleteName = name;
        deleteDialog?.Show();
    }

    private async Task OnDeleteDialogClosed(bool confirmed)
    {
        if (confirmed)
        {
            await DeleteStudent(studentToDeleteId);
        }
    }

    private void OnInstituteFilterChanged(ChangeEventArgs e)
    {
        selectedInstituteFilter = string.IsNullOrEmpty(e.Value?.ToString()) ? null : e.Value.ToString();
        ApplyFilters();
    }

    private void OnGroupFilterChanged(ChangeEventArgs e)
    {
        selectedGroupFilter = string.IsNullOrEmpty(e.Value?.ToString()) ? null : e.Value.ToString();
        ApplyFilters();
    }

    private void OnCourseFilterChanged(ChangeEventArgs e)
    {
        selectedCourseFilter = string.IsNullOrEmpty(e.Value?.ToString()) ? null : e.Value.ToString();
        ApplyFilters();
    }
}

