@page "/students"
@inject IStudentService StudentService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@using StudentJournal.Data.Models

<div class="container-fluid px-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">Студенты</h2>
                <p class="page-subtitle">Управление списком студентов</p>
            </div>
            <button class="btn btn-primary btn-with-icon"
                    @onclick="@(() => NavigationManager.NavigateTo("/students/add"))">
                <i class="bi bi-person-plus"></i> Добавить студента
            </button>
        </div>
    </div>

    @if (studentList.Count == 0)
    {
        <div class="empty-state">
            <i class="bi bi-people empty-icon"></i>
            <h4 class="empty-title">Нет студентов</h4>
            <p class="empty-text">Добавьте первого студента, чтобы начать</p>
            <button class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/students/add"))">
                <i class="bi bi-plus"></i> Добавить студента
            </button>
        </div>
    }
    else
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Студент</th>
                            <th>Институт</th>
                            <th>Группа</th>
                            <th>  Курс</th>
                            <th class="text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in studentList)
                        {
                            <tr>
                                <td>
                                    <div class="student-info">
                                        <div class="student-details">
                                            <div class="student-name">@student.Name</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="institute-badge">@student.Institute</span>
                                </td>
                                <td>
                                    <span class="group-badge">
                                        <i class="bi bi-people-fill me-1"></i> @student.Group
                                    </span>
                                </td>
                                <td>
                                    <span class="course-indicator">
                                        <i class="bi bi-book me-1"></i>
                                        <span class="course-number">@student.Course</span>
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <button class="btn btn-sm btn-outline-primary btn-action me-2"
                                                @onclick="@(() => NavigationManager.NavigateTo($"/students/edit/{student.Id}"))">
                                            <i class="bi bi-pencil"></i> Редактировать
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger btn-action"
                                                @onclick="@(() => ShowDeleteConfirm(student.Id, student.Name))">
                                            <i class="bi bi-trash"></i> Удалить
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="table-footer">
                <div class="table-summary">
                    Всего студентов: <strong>@studentList.Count</strong>
                </div>
            </div>
        </div>
    }
</div>

<ConfirmDialog @ref="deleteDialog"
               Title="Удаление студента"
               Icon="bi-person-x"
               Message="@($"Вы уверены, что хотите удалить студента {studentToDeleteName}?")"
               OnClose="OnDeleteDialogClosed" />

@code {
    private List<Student> studentList = new();
    private ConfirmDialog? deleteDialog;
    private int studentToDeleteId;
    private string studentToDeleteName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        studentList = (await StudentService.GetStudentsAsync()).ToList();
    }

    private async Task DeleteStudent(int id)
    {
        await StudentService.DeleteStudentAsync(id);
        studentList = (await StudentService.GetStudentsAsync()).ToList();
    }

    private void ShowDeleteConfirm(int id, string name)
    {
        studentToDeleteId = id;
        studentToDeleteName = name;
        deleteDialog?.Show();
    }

    private async Task OnDeleteDialogClosed(bool confirmed)
    {
        if (confirmed)
        {
            await DeleteStudent(studentToDeleteId);
        }
    }
}

