@page "/students/edit/{Id:int}"
@using StudentJournal.Data.Models
@inject IStudentService StudentService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container-fluid px-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">Редактировать студента</h2>
                <p class="page-subtitle">Изменение информации о студенте</p>
            </div>
            <button class="btn btn-outline-secondary btn-with-icon"
                    @onclick="@(() => NavigationManager.NavigateTo("/students"))">
                <i class="bi bi-arrow-left"></i> Назад
            </button>
        </div>
    </div>

    <!-- Блок с ошибками -->
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="ClearError"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (editingStudent == null)
            {
                <div class="loading-state">
                    <div class="spinner"></div>
                    <p>Загрузка данных...</p>
                </div>
            }
            else
            {
                <div class="form-card">
                    <div class="form-header">
                        <h5 class="form-title">
                            <span class="me-2">Редактирование студента</span>
                            <span class="course-indicator">
                                <i class="bi bi-book me-1"></i>
                                <span class="course-number">@editingStudent.Course</span> курс
                            </span>
                        </h5>
                    </div>
                    <div class="form-body">
                        <div class="form-group">
                            <label class="form-label">
                                <span>ФИО студента</span>
                                <span class="text-danger">*</span>
                            </label>
                            <input class="form-input @(nameInvalid ? "is-invalid" : "")"
                                   value="@nameValue"
                                   @oninput="@(async (e) => await NameChanged(e))"
                                   placeholder="Введите имя и фамилию студента (Например: Наталья Чернова)"
                                   required />
                            @if (nameInvalid)
                            {
                                <div class="invalid-feedback">
                                    @nameErrorMessage
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <span>Институт</span>
                                <span class="text-danger">*</span>
                            </label>
                            <select class="form-input" @bind="editingStudent.Institute" required>
                                <option value="">Выберите институт</option>
                                @foreach (var institute in institutes)
                                {
                                    <option value="@institute">@institute</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <span>Курс</span>
                                <span class="text-danger">*</span>
                            </label>
                            <select class="form-input" @bind="editingStudent.Course" @bind:event="onchange" required>
                                <option value="">Выберите курс</option>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <option value="@i">@i курс</option>
                                }
                            </select>
                            <div class="form-info mt-1">
                                @if (editingStudent.Course > 0)
                                {
                                    <div class="course-year-info">
                                        <i class="bi bi-calendar-week text-primary me-1"></i>
                                        <span>Соответствующий год в группе:</span>
                                        <strong class="ms-1">@GetYearByCourse(editingStudent.Course)</strong>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <span>Группа</span>
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group-group">
                                <div class="group-input-section">
                                    <div class="input-row mb-2">
                                        <span class="input-label">Префикс:</span>
                                        <input class="form-input form-input-small"
                                               value="@groupPrefix"
                                               @oninput="@(async (e) => await GroupPrefixChanged(e))"
                                               placeholder="ИИПБ" />
                                        <span class="input-separator">-</span>
                                        <span class="input-label">Год:</span>
                                        <input class="form-input form-input-small year-input"
                                               value="@GetYearByCourse(editingStudent.Course)"
                                               readonly />
                                        <span class="input-separator">-</span>
                                        <span class="input-label">Номер:</span>
                                        <input class="form-input form-input-small"
                                               value="@groupNumber"
                                               @oninput="@(async (e) => await GroupNumberChanged(e))"
                                               placeholder="1" />
                                    </div>
                                    <div class="form-info">
                                        @if (!string.IsNullOrEmpty(groupPrefix) && !string.IsNullOrEmpty(groupNumber))
                                        {
                                            <div class="group-preview mb-2">
                                                @if (nameInvalid)
                                                {
                                                    <i class="bi bi-x-circle text-danger me-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-check-circle text-success me-1"></i>
                                                }
                                                <span>Полное название группы:</span>
                                                <strong class="ms-1">
                                                    @groupPrefix-@GetYearByCourse(editingStudent.Course)-@groupNumber
                                                </strong>
                                            </div>
                                        }
                                        <div>
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-primary"
                                                    @onclick="UpdateGroupYear">
                                                <i class="bi bi-arrow-clockwise me-1"></i>
                                                Обновить год в группе
                                            </button>
                                            <small class="text-muted ms-2">
                                                Нажмите, чтобы обновить год в текущей группе
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-footer">
                            <div class="d-flex justify-content-end gap-3">
                                <button type="button"
                                        class="btn btn-outline-secondary btn-action"
                                        @onclick="@(() => NavigationManager.NavigateTo("/students"))">
                                    Отмена
                                </button>
                                <button type="button"
                                        class="btn btn-primary btn-action"
                                        @onclick="@SaveStudent"
                                        disabled="@(!IsFormValid || checkingDuplicate || nameInvalid)">
                                    <i class="bi bi-check-circle me-2"></i> Сохранить изменения
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Student? editingStudent;
    private string nameValue = "";
    private string groupPrefix = "";
    private string groupNumber = "";
    private string errorMessage = string.Empty;
    private bool nameInvalid = false;
    private string nameErrorMessage = string.Empty;
    private bool checkingDuplicate = false;

    private List<string> institutes = new List<string>
    {
        "Институт архитектуры и дизайна",
        "Строительный институт",
        "Высшая инженерная школа EG",
        "Высшая школа цифровых технологий",
        "Нефтегазовый институт",
        "Институт сервиса и отраслевого управления",
        "Технологический институт",
        "Институт заочного и дистанционного образования"
    };

    protected override async Task OnInitializedAsync()
    {
        editingStudent = await StudentService.GetStudentByIdAsync(Id);
        if (editingStudent != null)
        {
            nameValue = editingStudent.Name;
            ParseCurrentGroup();
        }
    }

    private bool IsFormValid =>
        editingStudent != null &&
        !string.IsNullOrWhiteSpace(nameValue) &&
        !string.IsNullOrWhiteSpace(editingStudent.Institute) &&
        editingStudent.Course >= 1 && editingStudent.Course <= 5 &&
        !string.IsNullOrWhiteSpace(groupPrefix) &&
        !string.IsNullOrWhiteSpace(groupNumber);

    private async Task SaveStudent()
    {
        try
        {
            errorMessage = string.Empty;

            if (editingStudent != null && IsFormValid && !nameInvalid && !checkingDuplicate)
            {
                // Обновление имени студента
                editingStudent.Name = nameValue;

                // Обновление группы с правильным годом
                editingStudent.Group = $"{groupPrefix}-{GetYearByCourse(editingStudent.Course)}-{groupNumber}";

                // Финальная проверка перед сохранением
                var fullGroup = editingStudent.Group;
                var exists = await StudentService.StudentExistsAsync(editingStudent.Name, fullGroup);

                // Проверка что это не тот же самый студент.
                if (exists)
                {
                    var existingStudents = await StudentService.GetStudentsByGroupAsync(fullGroup);
                    var duplicateStudent = existingStudents.FirstOrDefault(s =>
                        s.Name.ToLower().Trim() == editingStudent.Name.ToLower().Trim());

                    // Если найденный студент не тот, которого мы редактируем
                    if (duplicateStudent != null && duplicateStudent.Id != editingStudent.Id)
                    {
                        errorMessage = $"Студент {editingStudent.Name} уже существует в группе {fullGroup}";
                        return;
                    }
                }

                await StudentService.UpdateStudentAsync(editingStudent);
                NavigationManager.NavigateTo("/students");
            }
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            errorMessage = "Произошла ошибка при сохранении изменений. Попробуйте снова.";
        }
    }

    private void ParseCurrentGroup()
    {
        if (!string.IsNullOrEmpty(editingStudent?.Group))
        {
            var parts = editingStudent.Group.Split('-');
            if (parts.Length == 3)
            {
                groupPrefix = parts[0];
                groupNumber = parts[2];
            }
        }
    }

    private string GetYearByCourse(int course)
    {
        // Логика: курс 1 = 25, курс 2 = 24, курс 3 = 23, курс 4 = 22, курс 5 = 21
        return (25 - (course - 1)).ToString();
    }

    private void UpdateGroupYear()
    {
        if (editingStudent != null && !string.IsNullOrEmpty(groupPrefix) && !string.IsNullOrEmpty(groupNumber))
        {
            // Принудительный запуск проверки после редактирования года
            _ = CheckForDuplicate();
            StateHasChanged();
        }
    }

    private async Task NameChanged(ChangeEventArgs e)
    {
        nameValue = e.Value?.ToString() ?? "";

        // Сброс ошиюки при вводе
        nameInvalid = false;
        nameErrorMessage = string.Empty;

        if (editingStudent != null &&
            !string.IsNullOrWhiteSpace(groupPrefix) &&
            !string.IsNullOrWhiteSpace(groupNumber))
        {
            await CheckForDuplicate();
        }
    }

    private async Task GroupPrefixChanged(ChangeEventArgs e)
    {
        groupPrefix = e.Value?.ToString() ?? "";
        await OnGroupInput();
    }

    private async Task GroupNumberChanged(ChangeEventArgs e)
    {
        groupNumber = e.Value?.ToString() ?? "";
        await OnGroupInput();
    }

    private async Task OnGroupInput()
    {
        if (editingStudent != null &&
            !string.IsNullOrWhiteSpace(groupPrefix) &&
            !string.IsNullOrWhiteSpace(groupNumber) &&
            !string.IsNullOrWhiteSpace(nameValue))
        {
            await CheckForDuplicate();
        }
    }

    private async Task CheckForDuplicate()
    {
        if (string.IsNullOrWhiteSpace(nameValue) ||
            string.IsNullOrWhiteSpace(groupPrefix) ||
            string.IsNullOrWhiteSpace(groupNumber))
        {
            return;
        }

        checkingDuplicate = true;

        try
        {
            // Формирование группы для проверки
            var fullGroup = $"{groupPrefix}-{GetYearByCourse(editingStudent?.Course ?? 2)}-{groupNumber}";

            // Проверка: существует ли студент с таким именем в этой группе
            var existingStudents = await StudentService.GetStudentsByGroupAsync(fullGroup);
            var duplicateStudent = existingStudents.FirstOrDefault(s =>
                s.Name.ToLower().Trim() == nameValue.ToLower().Trim());

            // Если найден студент с таким же именем, и это не тот же самый студент
            if (duplicateStudent != null && duplicateStudent.Id != editingStudent?.Id)
            {
                nameInvalid = true;
                nameErrorMessage = $"Студент {nameValue} уже существует в группе {fullGroup}";
            }
            else
            {
                nameInvalid = false;
                nameErrorMessage = string.Empty;
            }
        }
        finally
        {
            checkingDuplicate = false;
            StateHasChanged();
        }
    }

    private void ClearError()
    {
        errorMessage = string.Empty;
    }
}

